[include]
    path = ~/.gitconfig.local
[alias]
    co = checkout
    ci = commit
    st = status --column
    stu = status --column -uno
    br = branch
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    type = cat-file -t
    dump = cat-file -p

    diffs = diff --ignore-space-change

    sl = stash list
    sp = stash pop
    sa = stash apply
    ssh= stash show
    sd = stash drop
    ssa = stash save

    tree = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold cyan)<%an>%Creset' --abbrev-commit --date=relative
    fix = "!f() { vim -p $(git diff --name-only --diff-filter=U); }; f"
[core]
    preloadindex = true
[color]
    diff = auto
    ui = auto
[merge]
	conflictstyle = diff3
	tool = vimdiff
[push]
	default = matching
